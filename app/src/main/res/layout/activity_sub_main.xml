<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.happypig.myapplication.SubMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="628dp">

                <Spinner
                    android:id="@+id/spinner5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:entries="@array/pigInformation" />

                <Button
                    android:id="@+id/pigstyName4"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/pigstyPicture4"
                    android:layout_alignStart="@+id/pigstyPicture4"
                    android:background="?android:attr/colorForeground"
                    android:text="โรงเรือนที่ 3"
                    android:textColor="@android:color/background_light" />

                <ImageButton
                    android:id="@+id/pigstyPicture4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignStart="@+id/pigstyPicture3"
                    android:layout_centerVertical="true"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="@android:color/darker_gray"
                    android:tint="@drawable/ic_menu_gallery"
                    app:srcCompat="@drawable/ic_menu_gallery" />

                <Button
                    android:id="@+id/pigstyName3"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/pigstyPicture3"
                    android:layout_alignStart="@+id/pigstyPicture3"
                    android:background="?android:attr/colorForeground"
                    android:text="โรงเรือนที่ 1"
                    android:textColor="@android:color/background_light" />

                <ImageButton
                    android:id="@+id/pigstyPicture3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="67dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="@android:color/darker_gray"
                    android:tint="@drawable/ic_menu_gallery"
                    app:srcCompat="@drawable/ic_menu_gallery" />

                <ImageButton
                    android:id="@+id/pigstyPicture"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/pigstyPicture3"
                    android:layout_marginEnd="28dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="@android:color/darker_gray"
                    android:tint="@drawable/ic_menu_gallery"
                    app:srcCompat="@drawable/ic_menu_gallery" />

                <Button
                    android:id="@+id/pigstyName"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/pigstyPicture"
                    android:layout_alignStart="@+id/pigstyPicture"
                    android:background="?android:attr/colorForeground"
                    android:text="โรงเรือนที่ 2"
                    android:textColor="@android:color/background_light" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
