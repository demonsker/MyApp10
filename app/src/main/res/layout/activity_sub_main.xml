<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.happypig.myapplication.FoodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pigsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="67dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="pig search"
            android:inputType="textPersonName" />

        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pigsearch"
            android:layout_marginTop="19dp" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/pigsearch"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/pigsearch"
            android:text="S" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
