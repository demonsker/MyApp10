<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.happypig.myapplication.AddActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="655dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="747dp"
                android:layout_gravity="center_vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:background="?attr/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textInputLayout">

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="19dp"
                    android:gravity="center"
                    android:text="เพิ่มข้อมูลสุกร"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/button22"
                    android:layout_alignStart="@+id/button22"
                    android:layout_below="@+id/button9"
                    android:layout_marginTop="21dp"
                    android:entries="@array/chocolate" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/toolbar"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="46dp"
                    android:layout_toStartOf="@+id/textView"
                    android:background="@color/colorPrimary"
                    android:onClick="onBackClick"
                    android:tint="@android:color/background_light"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/spinner6"
                    android:layout_alignStart="@+id/textView43"
                    android:text="โรงเรือน : "
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จำนวนสุกร :"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/editText4"
                    android:layout_alignStart="@+id/textView6" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="อายุ (วัน) :"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/textView7"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_marginTop="26dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button11"
                    android:layout_alignBottom="@+id/button11"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorPrimaryDark"
                    android:text="เพิ่มสุกรหลายตัว"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/darker_gray"
                    android:text="เพิ่มสุกรตัวเดียว"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="ตัว"
                    android:textColor="@android:color/darker_gray"
                    android:layout_below="@+id/textView6"
                    android:layout_alignStart="@+id/spinner6" />

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="วัน"
                    android:textColor="@android:color/darker_gray"
                    android:layout_alignBottom="@+id/textView32"
                    android:layout_alignStart="@+id/editText4" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:text="การฉีดวัคซีน :"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/textView32"
                    android:layout_alignStart="@+id/button24" />

                <Button
                    android:id="@+id/button23"
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:layout_alignEnd="@+id/button25"
                    android:layout_below="@+id/button22"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray"
                    android:text="วัคซีนอหิวาต์สุกร" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="220dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/button23"
                    android:layout_alignTop="@+id/textView43"
                    android:background="@android:color/darker_gray"
                    android:text="วันซีนโรคเท้าปากเปื่อย" />

                <Button
                    android:id="@+id/button24"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/button23"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="28dp"
                    android:layout_toStartOf="@+id/button25"
                    android:background="@color/colorPrimary"
                    android:text="ขาย"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button25"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/button24"
                    android:layout_alignBottom="@+id/button24"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/button11"
                    android:background="@android:color/darker_gray"
                    android:text="ยกเลิก"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
