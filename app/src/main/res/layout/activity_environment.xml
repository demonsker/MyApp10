<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.happypig.myapplication.EnvironmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button2">

        <TextView
            android:id="@+id/textView59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="การควบคุมสภาพแวดล้อม"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/templabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignStart="@+id/spinner2"
            android:text="30 องศาเซลเซียส"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/button32"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:text="เลือกโรงเรือน :"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button32"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@color/colorPrimaryDark"
            android:text="ตั้งค่าอุณหภูมิ"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView59"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/tocleanbutton"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button32"
            android:layout_alignBottom="@+id/button32"
            android:layout_toEndOf="@+id/button32"
            android:background="@android:color/darker_gray"
            android:text="ทำความสะอาด"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/button32"
            android:entries="@array/foodInformation" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="31dp"
            android:text="อุณหภูมิปัจจุบัน : "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tempMin_textViwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tempMax_textViwe"
            android:layout_below="@+id/tempMax_textViwe"
            android:layout_marginTop="18dp"
            android:text="อุณหภูมิต่ำสุด : "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tempMax_textViwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="อุณหภูมิสูงสุด : "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView19"
            android:layout_alignStart="@+id/textView8" />

        <Button
            android:id="@+id/tosettempbutton"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tempMin_textViwe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:text="ตั้งค่าอุณหภูมิ"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tempMax_textViwe"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="43dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tempMin_textViwe"
            android:layout_alignBottom="@+id/tempMin_textViwe"
            android:layout_alignEnd="@+id/spinner2"
            android:text="24 องศสเซลเซียส"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tempMax_textViwe"
            android:layout_alignBottom="@+id/tempMax_textViwe"
            android:layout_alignStart="@+id/textView18"
            android:text="30 องศสเซลเซียส"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@android:color/darker_gray"
            android:text="การตั้งค่าอุณหภูมิ"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
