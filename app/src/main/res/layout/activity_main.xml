<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.happypig.myapplication.Main2Activity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:layout_gravity="top|left"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="@mipmap/ic_add" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.happypig.myapplication.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="69dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|left"
            app:layout_anchor="@+id/linearLayout"
            app:layout_anchorGravity="top|right"
            app:srcCompat="@mipmap/ic_hamberger" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="433dp"
                android:layout_weight="1.09">

                <include
                    android:id="@+id/include"
                    layout="@layout/content_main"
                    android:layout_width="370dp"
                    android:layout_height="485dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="129dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.45"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:srcCompat="@mipmap/ic_home" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="128dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:srcCompat="@mipmap/ic_finance" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="129dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:srcCompat="@mipmap/ic_notification" />
            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.design.widget.CoordinatorLayout>
