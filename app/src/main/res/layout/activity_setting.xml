                    android:layout_marginTop="25dp"
                    android:text="น้ำหนักสุกรที่พร้อมขาย :"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_below="@+id/button27"
                    android:layout_alignStart="@+id/textView61" />

                <EditText
                    android:id="@+id/editText16"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView62"
                    android:layout_alignBottom="@+id/textView62"
                    android:layout_alignEnd="@+id/editText15"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="กิโลกรัม"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="54dp"
                    android:showText="true"
                    android:text="การทำงานแบบอัตโนมัติ"
                    android:layout_alignTop="@+id/button12"
                    android:layout_alignEnd="@+id/editText16"
                    android:layout_alignStart="@+id/textView62" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

