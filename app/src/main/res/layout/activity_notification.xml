                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button25"
                android:background="@android:color/background_light"
                android:backgroundTint="?android:attr/colorControlHighlight"
                android:text="     มีสุกร 5 ตัวรอการถ่ายพยาธิ"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button26"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button24"
                android:background="@android:color/background_light"
                android:backgroundTint="?android:attr/colorControlHighlight"
                android:text="     สุกรในกรงเลขที่ 02013 มีอัตราการเติบโตผิดปกติ"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button25"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button26"
                android:background="@android:color/background_light"
                android:backgroundTint="?android:attr/colorBackgroundFloating"
                android:text="     มีสุกรพร้อมขาย 5 ตัว"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button24"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button23"
                android:background="@android:color/background_light"
                android:backgroundTint="?android:attr/colorBackground"
                android:text="     ถังอาหารเลขที่ 01005 ต้องการเปลี่ยนสูตรอาหาร"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button23"
                style="@android:style/Widget.Material.Light.Button.Small"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button19"
                android:background="@android:color/background_light"
                android:backgroundTint="?android:attr/colorControlHighlight"
                android:text="     มีสุกร 20 รอการฉีดวัคซีน"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>
